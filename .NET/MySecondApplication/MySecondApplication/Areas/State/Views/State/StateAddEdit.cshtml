@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MySecondApplication.Areas.State.Models.StateModel;
<form method="post" asp-area="State" asp-controller="State" asp-action="AddEditState">
    <input type="hidden" asp-for="StateId" />
    <div class="form-group">
        <label for="exampleInputEmail1">State Name</label>
        <input asp-for="StateName" type="text" class="form-control" placeholder="Enter State Name">
        <span asp-validation-for="StateName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">State Code</label>
        <input asp-for="StateCode" type="text" class="form-control" placeholder="State Code">
        <span asp-validation-for="StateCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Country</label>
        @Html.DropDownListFor(model => model.SelectedCountryId, new SelectList(Model.Countries, "CountryId", "CountryName"), "Select Country", new { @class = "form-control" })
        <span asp-validation-for="SelectedCountryId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}