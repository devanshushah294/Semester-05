@using NiceAdminThemeImplementation.Areas.Student.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Model.StudentID == null)
    {
        ViewData["Title"] = "Student Add";
    }
    else
    {
        ViewData["Title"] = "Student Edit";
    }
}
@model StudentModel;
<div class="card p-3">
    <h1 class="">@ViewData["Title"]</h1>
</div>
<div class="card p-3">
    <form class="row g-3" method="post" asp-action="Save" asp-area="Student" asp-controller="Student">
        <input type="hidden" asp-for="StudentID" />
        <div class="col-md-12">
            <label for="inputName5" class="form-label">Student Name</label>
            <input type="text" class="form-control" id="inputName5" asp-for="StudentName">
            <span asp-validation-for="StudentName"></span>
        </div>
        <div class="col-md-12">
            <label for="inputName5" class="form-label">Mobile Number</label>
            <input type="text" class="form-control" id="inputName5" asp-for="MobileNoStudent">
            <span asp-validation-for="MobileNoStudent"></span>
        </div>
        <div class="col-md-6">
            <label for="inputEmail5" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="EmailAddress" id="inputEmail5">
        </div>
        @{
            if (Model.StudentID == null)
            {
                <div class="col-md-6">
                    <label for="inputPassword5" class="form-label">Password</label>
                    <input type="password" class="form-control" id="inputPassword5" asp-for="Password">
                </div>
            }
        }
        <div class="col-12">
            <label for="inputAddress" class="form-label">Address</label>
            <input type="text" class="form-control" id="inputAddress" asp-for="Address">
        </div>
        <div class="col-12 mb-4">
            <label for="inputAddress" class="form-label">Father's mobile number</label>
            <input type="text" class="form-control" id="inputAddress" asp-for="MobileNoFather">
        </div>
        <div class="row mb-4 col-12">
            <label for="inputDate" class="col-sm-2 col-form-label">Date</label>
            <div class="col-sm-10">
                @{
                    if (Model.StudentID == null)
                    {
                        <input type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" asp-for="BirthDate"/>
                    }
                    else
                    {
                        <input type="date" class="form-control" asp-for="BirthDate" />
                    }
                }
            </div>
        </div>

        <fieldset class="row mb-4 col-12">
            <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Gender" id="Male" value="Male" checked="checked" asp-for="Gender">
                    <label class="form-check-label" for="Male">Male</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Gender" id="Female" value="Female" asp-for="Gender">
                    <label class="form-check-label" for="Female">Female</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Gender" id="Others" value="Others" asp-for="Gender">
                    <label class="form-check-label" for="Others">Others</label>
                </div>
            </div>
        </fieldset>
        <div class="col-md-6">
            <label for="inputCity" class="form-label">City</label>
            <select id="inputCity" class="form-select" asp-for="SelectedCityId">
                <option selected disabled hidden>Select the City</option>
                @foreach (CityModel cm in Model.Cities)
                {
                    <option class="bg-light text-dark" value="@cm.CityId">@cm.CityName</option>
                }
            </select>
        </div>
        <div class="col-md-6">
            <label for="inputCity" class="form-label">Branch</label>
            <select asp-for="BranchID" class="form-select" id="inputBranch">
                <option selected disabled hidden>Select the Branch</option>
                @foreach (BranchModel bm in Model.Branches)
                {
                    <option class="bg-light text-dark" value="@bm.BranchID">@bm.BranchName</option>
                }
            </select>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
        </div>
    </form><!-- End Multi Columns Form -->

</div>