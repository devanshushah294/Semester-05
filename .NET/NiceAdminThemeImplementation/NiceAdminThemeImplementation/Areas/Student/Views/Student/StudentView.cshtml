@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model System.Data.DataTable;
<div class="card-body">
    <div class="card">
        <h3 class="card-header">Filter</h3>
        <form class="d-flex justify-content-around my-4" method="POST" asp-area="Student" asp-controller="Student" asp-action="Filter">
            <div class="col-3">
                <input type="text" class="form-control" name="StudentName" placeholder="Student Name" />
            </div>
            <div class="col-3">
                <input type="text" class="form-control" name="BranchName" placeholder="Branch Name" />
            </div>
            <div class="col-3">
                <input type="text" class="form-control" name="CityName" placeholder="City Name" />
            </div>
            <button class="ms-auto  bd-highlight btn btn-primary" style="width:7vw" type="submit">Filter</button>
            <button type="reset" class="btn btn-secondary mx-2" style="width:7vw">Reset</button>
        </form>
    </div>
    <!-- Table with stripped rows -->
    <div class="card">
        <div class="card-header d-flex justify-content-between">

            <h3 class="">Student List</h3>


            <div class="">
                <form method="post" asp-area="Student" asp-controller="Student" asp-action="StudentAddEdit">
                    <button type="submit" class="btn btn-success">Add Student</button>
                </form>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">

                <table class="table table-bordered">
                    <thead>
                        <tr class="bg-secondary ">

                            <th scope="col">StudentName</th>
                            <th scope="col">MobileNoStudent</th>
                            <th scope="col">MobileNoFather</th>
                            <th scope="col">Address</th>
                            <th scope="col">Email</th>
                            <th scope="col">Age</th>
                            <th scope="col">Gender</th>
                            <th scope="col">IsActive</th>
                            <th scope="col">BirthDate</th>
                            <th scope="col">CityName</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (System.Data.DataRow row in Model.Rows)
                            {
                                <tr>
                                    <th scope="row">@row["StudentName"]</th>
                                    <td>@row["MobileNoStudent"]</td>
                                    <td>@row["MobileNoFather"]</td>
                                    <td>@row["Address"]</td>
                                    <td>@row["Email"]</td>
                                    <td>@row["Age"]</td>
                                    <td>@row["Gender"]</td>
                                    <td>@row["IsActive"]</td>
                                    <td>@row["BirthDate"]</td>
                                    <td>@row["CityName"]</td>
                                    <td class="d-flex flex-row justify-content">
                                        <form class="m-1" method="post" asp-area="Student" asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@row["StudentID"]">
                                            <button type="submit" class="btn btn-outline-danger" onclick="confirmDelete('@row["StudentID"]')">Delete</button>
                                        </form>
                                        <form class="m-1" method="post" asp-area="Student" asp-controller="Student" asp-action="StudentAddEdit" asp-route-id="@row["StudentID"]">
                                            <button type="submit" class="btn btn-outline-primary">Edit</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <!-- End Table with stripped rows -->
            </div>
        </div>
    </div>

</div>