@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model System.Data.DataTable;
<div class="m-2">

<form method="POST" asp-area="City" asp-controller="City" asp-action="CityAddEdit">
    <button type="submit" class="custom-btn">Add City</button>
</form>

<form method="POST" asp-area="City" style="display:flex; flex-direction:column; justify-content:space-between; height: 300px;" asp-controller="City" asp-action="Filter">
    <input type="search" class="form-control" name="cityName" placeholder="City Name" />
    <input type="search" class="form-control" name="stateName" placeholder="State Name" />
    <input type="search" class="form-control" name="cityCode" placeholder="City Code" />
    <input type="search" class="form-control" name="countryName" placeholder="Country Name" />
    <button type="submit" class="custom-btn" style="width:100px;">Filter</button>
</form>
<table class="table">
    <tr>
        <th>City Name</th>
        <th>City Code</th>
        <th>State Name</th>
        <th>Country Name</th>
        <th>Actions</th>
    </tr>
    @foreach (System.Data.DataRow row in Model.Rows)
    {
        <tr>
            <td>
                @row["CityName"]
            </td>
            <td>
                @row["CityCode"]
            </td>
            <td>
                @row["StateName"]
            </td>
            <td>
                @row["CountryName"]
            </td>
            <td class="d-flex">
                <form method="post" asp-area="City" asp-controller="City" asp-action="DeleteCity" asp-route-CityID="@row["CityID"]">
                    <button type="submit" class="custom-btn-common custom-btn-delete mx-1">Delete</button>
                </form>
                <form method="post" asp-area="City" asp-controller="City" asp-action="CityAddEdit" asp-route-CityID="@row["CityID"]">
                    <button class="custom-btn-common custom-btn-edit" type="submit">Edit</button>
                </form>
            </td>
        </tr>
    }
</table>
</div>